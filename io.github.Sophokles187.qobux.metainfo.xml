  <!-- Basic Info -->
  <name>Qobux</name>
  <summary>Unofficial Qobuz Client for Linux</summary>
  
  <!-- Developer -->
  <developer id="io.github.sophokles187">
    <name>Qobux Contributors</name>
  </developer>
  
  <!-- Description -->
  <description>
    <p>
      Qobux provides a native desktop experience for Qobuz streaming on Linux. 
      This unofficial client wraps the Qobuz web application in an Electron-based 
      desktop application with additional Linux-specific features.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Native desktop integration with system tray</li>
      <li>MPRIS support for media keys and desktop notifications</li>
      <li>Window management (minimize to tray, restore)</li>
      <li>Seamless access to your Qobuz music library</li>
    </ul>
    <p>
      <em>Note:</em> This is an unofficial client and requires a valid Qobuz subscription. 
      
    </p>
  </description>
  
  <!-- Desktop file -->
  <launchable type="desktop-id">io.github.Sophokles187.qobux.desktop</launchable>
  
  <!-- Categories -->
  <categories>
    <category>AudioVideo</category>
    <category>Audio</category>
    <category>Music</category>
